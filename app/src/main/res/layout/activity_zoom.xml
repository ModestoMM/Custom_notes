<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/img_fondo_note"
    tools:context=".Activities.ZoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ImageViewBackZoom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_left"/>


        <TextView
            android:id="@+id/TextViewTittleNotaZoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:textAlignment="center"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"/>


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp">

          <TextView
              android:id="@+id/TextViewContentZoom"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:lines="85"
              android:lineHeight="8dp"
              android:scrollbars="vertical"
              android:textColor="@color/colorBlack"
              android:textSize="20dp"/>


    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>